<h1><%= @event.name %></h1>

<h2> <%= t(@event.status, :scope => "event.status") %> </h2>

<h2> <%= @event.category.try(:name) %> </h2>

<%= sanitize @event.description %>

<% if @event.tickets.present? %>
<p> <%= link_to "Register", new_event_registration_path(@event), :class => "btn btn-primary" %> </p>
<% end %>
