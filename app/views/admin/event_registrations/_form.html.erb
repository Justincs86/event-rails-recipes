<% if @registration.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @registration.errors.full_messages.each do |error| %>
        <li>  <%= error %> </li>
      <% end %>
    </ul>
  </div>
<% end %>



<div class="form-group">
  <%= f.label :ticket_id %>
  <%= f.select :ticket_id, @event.tickets.all.map { |t| [t.name, t.id] }, {}, :class => "form-control" %>
</div>

<div class="form-group">
  <div class="btn-group" data-toggle="buttons">

    <% Registration::STATUS.each do |status| %>
      <label class="btn btn-default <%= (status == f.object.status)? 'active' : '' %> ">
        <%= f.radio_button :status, status %>
        <%= t(status, :scope => "registration.status") %>
      </label>
    <% end %>
  </div>
</div>

<div class="form-group">
  <%= f.label :name, "姓名" %>
  <%= f.text_field :name, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :cellphone, "电话" %>
  <%= f.text_field :cellphone, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :website %>
  <%= f.url_field :website, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :bio %>
  <%= f.text_field :bio, :class => "form-control" %>
</div>
